                    </Path>
                </Canvas>
                <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Text="{Binding HeartRate}"
                       Foreground="#FFB0E6F4" FontSize="36" FontWeight="Bold" FontFamily="ArialBlack" />
