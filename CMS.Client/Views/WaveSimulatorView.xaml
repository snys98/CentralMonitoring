                    <Canvas.RenderTransform>
                        <ScaleTransform CenterX="-6" CenterY="-6"
                                        ScaleX="{Binding IsBeat, Converter={StaticResource BeatToScaleConverter}}"
                                        ScaleY="{Binding IsBeat, Converter={StaticResource BeatToScaleConverter}}" />
                    </Canvas.RenderTransform>
