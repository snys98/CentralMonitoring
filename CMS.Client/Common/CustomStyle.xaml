<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CMS.Client.Common"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <system:String x:Key="RightCornerTimeFormat">
        yyyy年MM月dd日 HH:mm
    </system:String>
    <system:String x:Key="ShortTimeFormat">
        HH:mm:ss
    </system:String>
    <system:String x:Key="DateFormat">
        yyyy-MM-dd
    </system:String>
    <Style x:Key="FillParentStyle" TargetType="ContentControl">
        <Setter Property="Width">
            <Setter.Value>
                {Binding Source={RelativeSource AncestorLevel=1, Mode=FindAncestor, AncestorType={x:Type Grid}},Path=Width}
            </Setter.Value>
        </Setter>
        <Setter Property="Height">
            <Setter.Value>
                {Binding Source={RelativeSource AncestorLevel=1, Mode=FindAncestor, AncestorType={x:Type Grid}},Path=Width}
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>